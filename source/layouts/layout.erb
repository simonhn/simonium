      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-3780169-2', 'auto');
      ga('send', 'pageview');

    </script>
  </head>
  
  <body class="<%= page_classes %>">
    <header>
    </header>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>